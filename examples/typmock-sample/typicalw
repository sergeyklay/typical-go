#!/bin/bash

set -e

TYPTMP=.typical-tmp
TYPGO=$TYPTMP/bin/typical-go

if ! [ -s $TYPGO ]; then
	echo "Build typical-go"
	go build -o $TYPGO github.com/typical-go/typical-go
fi

$TYPGO run \
	-typical-build="tools/typical-build" \
	-project-pkg="github.com/typical-go/typical-go/examples/typmock-sample" \
	-typical-tmp=$TYPTMP \
	$@